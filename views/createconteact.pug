html
  head
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.css")
    title= title
  body
    a(href="/signout") #{username ? username + ', ' + password +' ' +' Sign out' : ''}
    a(href="/signin" style= username ? 'display: none;' : '') Sign in
    
    h1 Create Contact

    form(action="/creates" method="POST")
        fieldset 
            legend Basic Info
            label First Name: 
            input(type="text" id="firstName" name="firstName") 
            label Last Name: 
            input(type="text" id="lastName" name="lastName" )
            label Phone: 
            input(type="text" id="phoneNumber" name="phoneNumber" )
            label Email: 
            input(type="email" id="emailAddress" name="emailAddress")
        fieldset 
            legend Address 
            label Street: 
            input(type="text" id="street" name="street") 
            label City: 
            input(type="text" id="city" name="city" )
            label State: 
            input(type="text" id="state" name="state")
            label Zip: 
            input(type="text" id="zip" name="zip" )
            label Country: 
            input(type="text" id="country" name="country")
        fieldset 
            legend Contact Preferences 
            label 
            input(type="checkbox" id="contactByPhone" name="contactByPhone")
            | Contact by phone
            br
            label 
            input(type="checkbox" id="contactByEmail" name="contactByEmail")
            | Contact by email
        input(type="submit" value="Add")
        a(href="/") Cancel
